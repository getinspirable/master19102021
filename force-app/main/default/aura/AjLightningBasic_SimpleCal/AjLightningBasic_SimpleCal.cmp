<aura:component implements ="flexipage:availableForAllPageTypes">
    <aura:attribute name="result" type="Integer" ></aura:attribute>
    <lightning:card title="Simple Calculator" iconName="standard:work_capacity_usage">
       <div class="slds-p-horizontal_small">
        <lightning:input  name="input1" aura:id="input1" label="Enter Op1" placeholder="Enter operator1"></lightning:input>
        <lightning:input  name="input1" aura:id="input2" label="Enter Op2" placeholder="Enter operator2"></lightning:input>
        <div>Result : {!v.result} </div>
        <lightning:button name="Add" label="Add" onclick="{!c.onAdd}" ></lightning:button>
        <lightning:button name="Add" label="Sub" onclick="{!c.onSub}" ></lightning:button>
        <lightning:button name="Add" label="Multiply" onclick="{!c.onMultiply}" ></lightning:button>
        <lightning:button name="Add" label="Divide" onclick="{!c.onDivide}" ></lightning:button>
    </div> 
    </lightning:card>

</aura:component>